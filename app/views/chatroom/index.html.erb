<h2 class="ui center aligned big icon header">
  <i class="orange baseball ball icon"></i>
  Say something
</h2>
<div class="ui two column grid">
<div class="twelve wide column">
<div class="ui fluid raised card chatbox">

  <div class="content">
    <div class="ui feed">
    <% @messages.each do |msg| %>

      <div class="event">
        <div class="content">
          <div class="summary">
            <%= msg.user.username%>: <%= msg.body %>
          </div>
        </div>
      </div>
<% end %>

    </div>
  </div>

  <div class="extra content">
      <%= form_with scope: :message,  url: root_path, local: true do |f| %>
    <div class="field">
          <div class="ui fluid icon input">
            <%= f.text_field :body %>

      <i class="bordered inverted orange edit icon"></i>
      <%= f.submit %>
    </div>
    </div>
      <% end %>
  </div>
</div>
</div>



<div class="four wide column">
<div class="ui fluid raised card chatbox">
<div class="content">
<div class="ui inverted vertical menu">
  <a class="active item">
    Home
  </a>
  <a class="item">
    Messages
  </a>
  <a class="item">
    Friends
  </a>
  </div>
  </div>
</div>
</div>
</div>

